
one-px($color)
    position relative
    &:after 
      content ""
      display block
      position absolute
      left 0
      bottom 0
      width 100%
      height 1px
      background-color $color
      @media screen and (-webkit-device-pixel-ratio:2)
        transform scaleY(.5)
      @media screen and (-webkit-device-pixel-ratio:3)
        transform scaleY(.3333333)
border-none
  &:after
    content ""
    display none
bg-image($name)
    @media screen and (-webkit-device-pixel-ratio:2)
        background-image: url($name+"@2x.png")
    @media screen and (-webkit-device-pixel-ratio:3)
        background-image: url($name+"@3x.png")

















